  "status": 200,
  "entity": "Removed ServiceGroup with id: 2824",
  "metadata": {},
  "length": -1,
  "headers": {},
  "cookies": {},
  "links": [],
  "stringHeaders": {},
  "allowedMethods": [],
  "statusInfo": {
    "family": "SUCCESSFUL",
    "statusCode": 200,
    "reasonPhrase": "OK"
  },
  "actualEntity": "Removed ServiceGroup with id: 2824"
}